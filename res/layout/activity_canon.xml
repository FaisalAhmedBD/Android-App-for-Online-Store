<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.example.faisal.cse_600.canon">


    <android.support.v7.widget.Toolbar
        android:id="@+id/canon_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="?attr/colorPrimary"

        android:elevation="4dp"
        android:padding="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:minHeight="200dp"
        android:minWidth="200dp"
        android:maxHeight="300dp"
        android:maxWidth="300dp"
        android:visibility="visible"
        android:id="@+id/canon_image"
        android:layout_below="@+id/canon_toolbar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/canon"
        />
    <TextView
        android:id="@+id/canon__id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Product Id : 501"

        android:layout_below="@+id/canon_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
    <TextView
        android:id="@+id/canon__name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Product Name : Canon 70D Prime"

        android:layout_marginTop="10dp"

        android:layout_below="@+id/canon__id"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <TextView
        android:text="Price : 20,000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:id="@+id/canon__price"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/canon__name"
        android:layout_centerHorizontal="true" />





    <TextView
        android:text="In Stock : 12 Pieces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:id="@+id/canon__quantity"
        android:layout_below="@+id/canon__price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/buycanon"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:text="BUY"
        android:textSize="19dp"
        android:textStyle="bold"
        android:background="@drawable/mybutton"
        android:layout_below="@+id/canon__quantity"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="IMAGE NAME"
        android:id="@+id/canon_imagename"
        android:visibility="invisible"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/canon__quantity"
        android:layout_centerHorizontal="true"
        />
    
</RelativeLayout>
