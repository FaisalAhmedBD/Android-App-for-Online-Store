<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.example.faisal.cse_600.get_mobile_info_online">
    <android.support.v7.widget.Toolbar
        android:id="@+id/get_mobile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="?attr/colorPrimary"

        android:elevation="4dp"
        android:padding="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/list_selector"
    android:id="@+id/mobileview"
    android:text="All Mobiles"
    android:layout_below="@+id/get_mobile_toolbar"
    android:textStyle="bold"
    android:textSize="20dp"
        android:textColor="#000000"
    android:layout_marginTop="20dp"
    android:padding="10dp"/>
    <View
        android:layout_marginLeft="10dp"

        android:id="@+id/linelisttop"
        android:layout_below="@+id/mobileview"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"
        android:background="@drawable/list_selector" />

    <ListView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:id="@+id/mobilelist"
         android:layout_below="@+id/linelisttop"
        android:dividerHeight="1dp"
        android:divider="@color/year" />

    <View
        android:id="@+id/linelistbottom"
        android:layout_below="@+id/mobilelist"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginRight="5dp"
        android:layout_height="1dp"
        android:background="@color/year" />
    <TextView
        android:id="@+id/brand"
        android:layout_below="@+id/linelistbottom"
        android:layout_marginTop="20dp"
        android:background="#d9d9d9"
        android:textSize="20dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:text="Find Mobiles By Brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iphone"
        android:padding="20dp"
        android:textSize="18dp"
        android:layout_below="@id/brand"
        android:text="iphone"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/samsung"
        android:padding="20dp"
        android:textSize="18dp"
        android:layout_below="@id/brand"
        android:text="SAMSUNG"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Xperia"
        android:padding="20dp"
        android:textSize="18dp"
        android:layout_below="@id/iphone"
        android:text="iphone"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Blackberry"
        android:padding="20dp"
        android:textSize="18dp"
        android:layout_below="@id/samsung"
        android:text="BLACKBERRY"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>


